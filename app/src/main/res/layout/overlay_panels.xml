<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:alpha="0.5"
    >

    <Space
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <ImageButton
        android:id="@+id/left_panel_overlay_open"
        style="@style/playersButtonsLeft"
        android:scaleType="centerInside"
        android:contentDescription="@string/action_close_panel"
        android:src="@drawable/ic_action_forward"
        android:adjustViewBounds="false"
        android:baselineAlignBottom="false"
        android:padding="@dimen/side_panel_open_icon_padding"
        android:foregroundGravity="left|bottom"
        android:layout_gravity="left|bottom"/>

    <ImageButton
        android:id="@+id/right_panel_overlay_open"
        style="@style/playersButtonsRight"
        android:scaleType="centerInside"
        android:contentDescription="@string/action_close_panel"
        android:src="@drawable/ic_action_back"
        android:adjustViewBounds="false"
        android:baselineAlignBottom="false"
        android:padding="@dimen/side_panel_open_icon_padding"
        android:foregroundGravity="right|bottom"
        android:layout_gravity="bottom|right"/>

</FrameLayout>
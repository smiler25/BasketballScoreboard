<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/board_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainBackground"
        android:orientation="vertical">

        <!--<include android:id="@+id/toolbar" layout="@layout/toolbar"/>-->


        <!-- first line -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                style="@style/matchParentCenter"
                android:layout_weight="1" >

                <ImageView
                    style="@style/matchParentCenter"
                    android:id="@+id/hornView"
                    android:contentDescription="@string/description_horn"
                    android:layout_weight="1"
                    android:scaleType="center"
                    android:src="@drawable/ic_bullhorn" />

                <ImageView
                    style="@style/matchParentCenter"
                    android:id="@+id/whistleView"
                    android:contentDescription="@string/description_whistle"
                    android:layout_weight="1"
                    android:scaleType="center"
                    android:src="@drawable/ic_whistle" />

            </LinearLayout>

            <!--<TextView
                android:id="@+id/blank11"
                style="@style/matchParentCenter"
                android:layout_width="10dp"
                android:layout_weight="1" />-->

            <com.smiler.basketball_scoreboard.elements.CustomFontTextView
                style="@style/ledDigits"
                android:textSize="@dimen/led_simple_font_size"
                android:layout_weight="1"
                android:id="@+id/mainTimeView"
                android:text="@string/main_time"
                />


            <LinearLayout
                android:orientation="vertical"
                style="@style/matchParentCenter"
                android:layout_weight="1" >

                <ImageView
                    style="@style/matchParentCenter"
                    android:layout_weight="1"
                    android:id="@+id/cameraView"
                    android:contentDescription="@string/description_start_camera"
                    android:scaleType="center"
                    android:src="@drawable/ic_action_dock" />

                <ImageView
                    style="@style/matchParentCenter"
                    android:layout_weight="1"
                    android:id="@+id/newPeriodIconView"
                    android:contentDescription="@string/description_new_period"
                    android:scaleType="center"
                    android:src="@drawable/ic_new_period" />

                <ImageView
                    style="@style/matchParentCenter"
                    android:contentDescription="@string/label_timeouts"
                    android:layout_weight="1"
                    android:id="@+id/rightIconView"
                    android:scaleType="center"
                    android:src="@drawable/ic_timeout" />
            </LinearLayout>



        </LinearLayout>
        <!-- end of first line -->


        <!-- second line -->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="5"
            android:rowCount="2"
            android:layout_gravity="center"
            android:stretchMode="spacingWidth"
            >

            <TableRow>
                <TextView
                    style="@style/label"
                    android:id="@+id/blank21"
                    android:layout_weight="1" />
                <TextView
                    style="@style/label"
                    android:textSize="@dimen/simple_name_font_size"
                    android:id="@+id/homeNameView"
                    android:text="@string/home_team_name_default"
                    android:layout_weight="2"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
                <TextView
                    style="@style/label"
                    android:textSize="@dimen/simple_name_font_size"
                    android:id="@+id/guestNameView"
                    android:text="@string/guest_team_name_default"
                    android:layout_weight="2"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
                <TextView
                    style="@style/label"
                    android:id="@+id/blank22"
                    android:layout_weight="1" />
            </TableRow>
        <!-- <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"> -->

            <TableRow
                android:layout_marginBottom="@dimen/bottom_line_margin"
            >

                <LinearLayout
                    android:orientation="vertical"
                    style="@style/matchParentCenter"
                    android:layout_weight="1" >

                    <TextView
                        style="@style/scoreChangers"
                        android:layout_weight="1"
                        android:id="@+id/plus1HomeView"
                        android:text="@string/plus1"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                    
                    <TextView
                        style="@style/scoreChangers"
                        android:layout_weight="1"
                        android:id="@+id/plus3HomeView"
                        android:text="@string/plus3"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                    
                    <TextView
                        style="@style/scoreChangers"
                        android:layout_weight="1"
                        android:id="@+id/minus1HomeView"
                        android:text="@string/minus1"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                </LinearLayout>

                 <com.smiler.basketball_scoreboard.elements.CustomFontTextView
                    style="@style/scoreStyleSimple"
                    android:layout_weight="2"
                    android:id="@+id/homeScoreView"
                    android:text="@string/two_zeros"
                     android:textSize="@dimen/led_simple_font_size"
                    />

                <com.smiler.basketball_scoreboard.elements.CustomFontTextView
                    style="@style/scoreStyleSimple"
                    android:layout_weight="2"
                    android:id="@+id/guestScoreView"
                    android:text="@string/two_zeros"
                    android:textSize="@dimen/led_simple_font_size"
                    />


                <LinearLayout
                    android:orientation="vertical"
                    style="@style/matchParentCenter"
                    android:layout_weight="1" >
                    
                    <TextView
                        style="@style/scoreChangers"
                        android:layout_weight="1"
                        android:id="@+id/plus1GuestView"
                        android:text="@string/plus1"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                    
                    <TextView
                        style="@style/scoreChangers"
                        android:layout_weight="1"
                        android:id="@+id/plus3GuestView"
                        android:text="@string/plus3"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                    
                    <TextView
                        style="@style/scoreChangers"
                        android:layout_weight="1"
                        android:id="@+id/minus1GuestView"
                        android:text="@string/minus1"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                </LinearLayout>

        <!-- </LinearLayout> -->
            
            </TableRow>
        </TableLayout>

    </LinearLayout>
</RelativeLayout>
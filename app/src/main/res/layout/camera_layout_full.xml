<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

    <FrameLayout
        android:id="@+id/camera_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/board_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainBackground"
        android:orientation="horizontal"
        >

        <ViewStub
            android:id="@+id/left_panel_stub"
            android:inflatedId="@+id/left_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/camera_bottom_margin"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_weight="0.005"
            >

            <include layout="@layout/camera_line_full"/>

            <ImageView
                android:id="@+id/camera_take_picture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:padding="10dp"
                android:contentDescription="@string/camera_take_picture"
                android:scaleType="center"
                android:src="@drawable/ic_camera"
                android:background="@drawable/camera_shape"/>

        </LinearLayout>

        <ViewStub
            android:id="@+id/right_panel_stub"
            android:inflatedId="@+id/right_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <include
        android:id="@+id/side_panels_and_overlay"
        layout="@layout/side_panels_and_overlay"
        />

</FrameLayout>
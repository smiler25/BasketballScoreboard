<resources>

    <style name="AppTheme" parent="AppTheme.Base">
    </style>
    
    <style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar">
    </style>

    <style name="ToolBarStyle" parent="">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="SecondaryTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:titleTextStyle">@color/red</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="android:actionModeBackground">@drawable/cab_background</item>
        <item name="android:actionModeCloseDrawable">@drawable/ic_action_cancel</item>
        <item name="android:actionMenuTextColor">@color/red</item>
    </style>

    <declare-styleable name="CustomFontTxtView">
        <attr name="customFont" format="string" />
    </declare-styleable>

    <style name="matchParentCenter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="ledDigits" parent="matchParentCenter">
        <item name="customFont">fonts/PilcrowIcons.ttf</item>
    </style>

    <style name="ledDigitsWeight2" parent="ledDigits">
        <item name="android:textSize">@dimen/led_weight2_font_size</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="mainTime" parent="ledDigits">
        <item name="android:textSize">@dimen/main_time_size</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="scoreStyle" parent="ledDigits">
        <item name="android:textSize">@dimen/score_size</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:padding">@dimen/score_padding</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="scoreStyleSimple" parent="ledDigits">
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">@dimen/led_simple_font_size</item>
    </style>

    <style name="bottomLineStyle" parent="ledDigits">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">@dimen/bottom_line_size</item>
        <item name="android:padding">@dimen/bottom_line_padding</item>
        <item name="android:layout_margin">@dimen/bottom_line_elements_margin</item>
        <item name="android:layout_marginBottom">@dimen/bottom_line_margin</item>
    </style>

    <style name="nbaTimeoutsStyle" parent="ledDigits">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">@dimen/led_nba_to_font_size</item>
        <item name="android:layout_marginBottom">@dimen/bottom_line_margin2</item>
    </style>

    <style name="scoreChangers" parent="ledDigits">
        <item name="android:textSize">@dimen/score_changer_size</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:padding">@dimen/score_changer_padding</item>
        <item name="android:layout_margin">@dimen/score_changer_margin</item>
    </style>

    <style name="label" parent="matchParentCenter">
        <item name="android:textSize">@dimen/label_font_size</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:layout_marginBottom">@dimen/label_margin</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="arrowStyle" parent="matchParentCenter">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_gravity">top|center_horizontal</item>
        <item name="border_width">@dimen/arrow_border_width</item>
    </style>
    <style name="arrowStyleSimple" parent="matchParentCenter">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="border_width">@dimen/arrow_border_width</item>
    </style>

    <style name="numberPicker">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="cameraLineView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:minWidth">50dp</item>
        <item name="android:maxWidth">150dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/camera_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="playersButtons">
        <item name="android:layout_width">@dimen/player_button_size</item>
        <item name="android:layout_height">@dimen/player_button_size</item>
        <item name="android:layout_marginTop">@dimen/player_button_margin</item>
        <item name="android:layout_marginBottom">@dimen/player_button_margin</item>
        <item name="android:textSize">@dimen/player_button_font_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/side_panel_button</item>
    </style>

    <style name="playersButtonsLeft" parent="playersButtons">
        <item name="android:layout_marginLeft">@dimen/player_button_margin_side</item>
    </style>

    <style name="playersButtonsRight" parent="playersButtons">
        <item name="android:layout_marginRight">@dimen/player_button_margin_side</item>
    </style>

    <style name="sidePanelTable">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:columnCount">5</item>
        <item name="android:textSize">@dimen/player_button_font_size</item>
        <item name="android:stretchMode">spacingWidth</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingTop">@dimen/side_panel_padding_top</item>
        <item name="android:background">@color/light_grey_background</item>
    </style>

    <style name="sidePanelTableRow">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingTop">@dimen/side_panel_row_padding</item>
        <item name="android:paddingBottom">@dimen/side_panel_row_padding</item>
    </style>

    <style name="sidePanelTableRowChild">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/side_panel_row_font_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="sidePanelToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/side_panel_toolbar_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/side_panel_toolbar</item>
    </style>

    <style name="resultScoreTableRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingTop">@dimen/side_panel_row_padding</item>
        <item name="android:paddingBottom">@dimen/side_panel_row_padding</item>
    </style>

    <style name="resultPlayersTableRowChild">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/side_panel_row_font_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
